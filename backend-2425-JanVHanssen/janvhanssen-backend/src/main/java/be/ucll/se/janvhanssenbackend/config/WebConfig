package be.ucll.se.janvhanssenbackend.config;

import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class WebConfig implements WebMvcConfigurer {

    @Override
    public void addCorsMappings(CorsRegistry registry) {
        registry.addMapping("/**") // Apply CORS to all paths
                .allowedOrigins("https://frontend-2425-janvhanssen.vercel.app") // Your frontend origin
                .allowedMethods("GET", "POST", "PUT", "DELETE", "OPTIONS") // Allow all common methods, including OPTIONS
                .allowedHeaders("*") // Allow all headers
                .allowCredentials(true); // Allow credentials if your frontend sends cookies/auth headers
    }
}